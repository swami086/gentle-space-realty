{
  "monitoring_configuration": {
    "session_id": "swarm-gentle-realty",
    "monitoring_level": "detailed",
    "telemetry_enabled": true,
    "real_time_dashboards": true,
    "alerting_enabled": true
  },
  
  "health_checks": {
    "agent_heartbeat": {
      "interval_ms": 1000,
      "timeout_ms": 5000,
      "retry_attempts": 3,
      "failure_threshold": 2
    },
    "mesh_connectivity": {
      "ping_interval_ms": 2000,
      "latency_threshold_ms": 100,
      "packet_loss_threshold": 0.01
    },
    "resource_monitoring": {
      "memory_threshold": 0.8,
      "cpu_threshold": 0.7,
      "disk_threshold": 0.9,
      "token_usage_threshold": 0.75
    }
  },
  
  "performance_metrics": {
    "coordination_metrics": {
      "message_latency_p95_ms": 0,
      "consensus_time_p95_ms": 0,
      "agent_synchronization_ms": 0,
      "mesh_efficiency_score": 1.0
    },
    "task_metrics": {
      "tasks_per_minute": 0,
      "task_completion_rate": 0,
      "average_task_duration_ms": 0,
      "concurrent_tasks": 0
    },
    "quality_metrics": {
      "code_quality_score": 0,
      "test_coverage_percentage": 0,
      "security_compliance_score": 0,
      "performance_benchmark_score": 0
    }
  },
  
  "alerting_rules": {
    "critical_alerts": [
      {
        "name": "agent_down",
        "condition": "agent_heartbeat > 5000ms",
        "action": "auto_failover",
        "notification": "immediate"
      },
      {
        "name": "mesh_partition",
        "condition": "connectivity < 80%",
        "action": "topology_repair", 
        "notification": "immediate"
      },
      {
        "name": "resource_exhaustion",
        "condition": "resource_usage > 90%",
        "action": "load_balancing",
        "notification": "urgent"
      }
    ],
    "warning_alerts": [
      {
        "name": "performance_degradation",
        "condition": "latency_p95 > 200ms",
        "action": "performance_analysis",
        "notification": "standard"
      },
      {
        "name": "quality_threshold_breach",
        "condition": "quality_score < 0.8",
        "action": "quality_review",
        "notification": "standard"
      }
    ]
  },
  
  "auto_healing": {
    "enabled": true,
    "strategies": {
      "agent_restart": {
        "trigger": "agent_unresponsive",
        "max_attempts": 3,
        "backoff_strategy": "exponential"
      },
      "load_rebalancing": {
        "trigger": "resource_imbalance",
        "threshold": 0.3,
        "rebalance_algorithm": "least_loaded"
      },
      "mesh_repair": {
        "trigger": "connectivity_loss",
        "repair_strategy": "redundant_pathfinding",
        "timeout_ms": 10000
      }
    }
  },
  
  "reporting": {
    "real_time_dashboard": {
      "update_interval_ms": 1000,
      "metrics_displayed": [
        "agent_status",
        "task_progress", 
        "performance_indicators",
        "quality_scores",
        "resource_utilization"
      ]
    },
    "periodic_reports": {
      "frequency": "hourly",
      "metrics_included": [
        "productivity_analysis",
        "quality_trends",
        "performance_benchmarks",
        "resource_optimization_suggestions"
      ]
    }
  }
}